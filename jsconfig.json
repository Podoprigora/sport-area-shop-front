{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": { 
          "@components/*": ["./src/components/*"],
          "@pages/*": ["./src/pages/*"],
          "@svg-icons/*": ["./src/components/SvgIcons/*"],
          "@resources/*": ["./src/stylesheet/resources/*"],
          "@remote/*": ["./remote/*"]
        }
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}